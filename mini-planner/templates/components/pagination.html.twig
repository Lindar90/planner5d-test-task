{% if totalPages > 1 %}
    <div class="flex items-center justify-between">
        <div>
            {# Previous Page Link #}
            {% if page > 1 %}
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page - 1})) }}" class="px-4 py-2 text-sm text-gray-700 bg-white border rounded-md hover:bg-gray-100">
                    Previous
                </a>
            {% else %}
                <span class="px-4 py-2 text-sm text-gray-500 bg-white border rounded-md">
                Previous
            </span>
            {% endif %}
        </div>

        <div>
            <span class="text-sm text-gray-700">
            Page {{ page }} out of {{ totalPages }}
        </span>
        </div>

        <div>
            {# Next Page Link #}
            {% if page < totalPages %}
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page + 1})) }}" class="px-4 py-2 text-sm text-gray-700 bg-white border rounded-md hover:bg-gray-100">
                    Next
                </a>
            {% else %}
                <span class="px-4 py-2 text-sm text-gray-500 bg-white border rounded-md">
                Next
            </span>
            {% endif %}
        </div>
    </div>
{% endif %}
